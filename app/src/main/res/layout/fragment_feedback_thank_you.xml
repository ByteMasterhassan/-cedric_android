<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pure_white"
    tools:context=".fragment.FeedbackThankYouFragment"
    tools:ignore="Overdraw">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_feedback_ty"
            android:contentDescription="@string/thank_you_image" />

        <TextView
            android:id="@+id/txt_thankyou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="33sp"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/xx_long_spacing"
            android:text="@string/thank_you" />

        <TextView
            android:id="@+id/txt_wewillcontactyou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textColor="@color/grey_text"
            android:lineSpacingExtra="6sp"
            android:layout_marginTop="@dimen/long_spacing"
            android:textSize="18sp"
            android:text="@string/we_will_contact_you_back_within_n48_hours" />
    </LinearLayout>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/redirectBtn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_height"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/btn_spacing"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="@dimen/btn_spacing"
        android:background="@drawable/gradient_drawable_button"
        android:fontFamily="@font/montserrat_semibold"
        android:text="@string/take_me_to_dashboard"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="@dimen/btn_text_size"
        app:backgroundTint="@null"
        app:cornerRadius="45dp"
        android:layout_marginBottom="@dimen/btn_spacing"
        app:flow_verticalAlign="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>