<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/productNameTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:fontFamily="@font/montserrat_semibold"
        android:text="@string/lose_weight"
        android:textColor="@color/pure_white"
        android:layout_marginEnd="56dp"
        android:textAlignment="textStart"
        android:textSize="@dimen/field_title_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/productNameBriefTV"
        android:layout_width="match_parent"
        android:layout_height="@dimen/field_height"
        android:layout_marginStart="@dimen/field_spacing"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="@dimen/field_spacing"
        android:layout_marginBottom="@dimen/x_long_spacing"
        android:background="@drawable/textview_outline_style"
        android:fontFamily="@font/montserrat_medium"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/extra_long_spacing"
        android:paddingEnd="@dimen/extra_long_spacing"
        android:text="@string/get_leaner_and_improve_your_fitness"
        android:textColor="@color/pure_white"
        android:textSize="@dimen/field_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/productNameTV" />

</androidx.constraintlayout.widget.ConstraintLayout>