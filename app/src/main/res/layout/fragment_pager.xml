<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/nutritionLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:paddingStart="@dimen/long_spacing"
        android:paddingTop="@dimen/short_spacing"
        android:paddingEnd="@dimen/long_spacing"
        android:paddingBottom="@dimen/short_spacing"
        android:visibility="visible"
        android:weightSum="2">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/breakfastCardView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="4dp">

                <ImageView
                    android:id="@+id/imageBreakfast"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:background="@color/shimmer_placeholder"
                    android:contentDescription="@string/app_name"
                    android:scaleType="centerCrop" />


                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/textViewBreakfast"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="90dp"
                    android:background="@color/background_black_transparent"
                    android:fontFamily="@font/montserrat_bold"
                    android:paddingStart="@dimen/short_spacing"
                    android:paddingEnd="@dimen/short_spacing"
                    android:text="@string/breakfast"
                    android:textAllCaps="false"
                    android:textColor="@color/pure_white"
                    android:textSize="13sp" />

                <LinearLayout
                    android:id="@+id/breakfastCaloriesLL"
                    android:background="@drawable/nutrition_tag"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:layout_gravity="end"
                    android:gravity="center"
                    android:layout_marginEnd="@dimen/xxx_long_spacing"
                    android:orientation="vertical">
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/breakfastCaloriesTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="@string/_400_kcal"
                        android:gravity="center"
                        android:layout_marginStart="@dimen/shortest_spacing"
                        android:layout_marginEnd="@dimen/shortest_spacing"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="@dimen/small_text" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/LunchCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="4dp">

                <ImageView
                    android:id="@+id/imageLunch"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@color/shimmer_placeholder"
                    android:contentDescription="@string/app_name"
                    android:scaleType="centerCrop" />


                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/textViewLunch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="30dp"
                    android:background="@color/background_black_transparent"
                    android:fontFamily="@font/montserrat_bold"
                    android:paddingStart="@dimen/short_spacing"
                    android:paddingEnd="@dimen/short_spacing"
                    android:text="@string/lunch_time"
                    android:textAllCaps="false"
                    android:textColor="@color/pure_white"
                    android:textSize="13sp" />

                <LinearLayout
                    android:id="@+id/lunchCaloriesLL"
                    android:background="@drawable/nutrition_tag"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:layout_gravity="end"
                    android:gravity="center"
                    android:layout_marginEnd="@dimen/xxx_long_spacing"
                    android:orientation="vertical">
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/lunchCaloriesTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="@string/_200_kcal"
                        android:gravity="center"
                        android:layout_marginStart="@dimen/shortest_spacing"
                        android:layout_marginEnd="@dimen/shortest_spacing"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="@dimen/small_text" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/DinnerCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="4dp">

                <ImageView
                    android:id="@+id/imageDinner"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@color/shimmer_placeholder"
                    android:contentDescription="@string/app_name"
                    android:scaleType="centerCrop" />


                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/textViewDinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="30dp"
                    android:background="@color/background_black_transparent"
                    android:fontFamily="@font/montserrat_bold"
                    android:paddingStart="@dimen/short_spacing"
                    android:paddingEnd="@dimen/short_spacing"
                    android:text="@string/dinner_time"
                    android:textAllCaps="false"
                    android:textColor="@color/pure_white"
                    android:textSize="13sp" />

                <LinearLayout
                    android:id="@+id/dinnerCaloriesLL"
                    android:background="@drawable/nutrition_tag"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:layout_gravity="end"
                    android:gravity="center"
                    android:layout_marginEnd="@dimen/xxx_long_spacing"
                    android:orientation="vertical">
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/dinnerCaloriesTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="@string/_350_kcal"
                        android:gravity="center"
                        android:layout_marginStart="@dimen/shortest_spacing"
                        android:layout_marginEnd="@dimen/shortest_spacing"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="@dimen/small_text" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

    </LinearLayout>

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/nutritionShimmerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:ignore="MissingConstraints">

        <include layout="@layout/shimmer_for_dashboard_nutritions" />
    </com.facebook.shimmer.ShimmerFrameLayout>

</FrameLayout>